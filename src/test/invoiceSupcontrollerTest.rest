# Get all invoices
GET http://localhost:3000/invoice-sup
Content-Type: application/json

###

# Get a single invoice by ID
GET http://localhost:3000/invoice-sup/1
Content-Type: application/json

###

# Create a new invoice with associated invoice lines
POST http://localhost:3000/invoice-sup
Content-Type: application/json

{
    "invoice_sup_total_amount": 1500.00,
    "supplier_id": 2,
    "invoice_lines": [
        {
            "product_id": 1,
            "product_variant_id": 1,
            "invoice_sup_line_quantity": 3,
            "invoice_sup_line_price": 300.00
        },
        {
            "product_id": 2,
            "product_variant_id": 2,
            "invoice_sup_line_quantity": 5,
            "invoice_sup_line_price": 200.00
        }
    ]
}

###

# Update an existing invoice
PUT http://localhost:3000/invoice-sup/1
Content-Type: application/json

{
    "invoice_sup_total_amount": 1600.00
}

###

# Delete an invoice
DELETE http://localhost:3000/invoice-sup/1
Content-Type: application/json
